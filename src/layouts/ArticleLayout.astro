            <a href={`/author/${author.slug}`} class="author-name">
              {author.name}
            </a>
            
            <div class="publish-info">
              <time datetime={new Date(publishDate).toISOString()} title={formattedPublishDate}>
                {relativePublishDate}
              </time>
              
              {modifiedDate && (
                <span class="modified-date" title={formattedModifiedDate}>
                  (Updated)
                </span>
