            <a href={`/author/${author.slug}`} class="author-avatar-link">
              <img 
                src={getImageKitUrl(author.avatar, { width: 48, height: 48 })}
                alt={author.name}
                width="48"
                height="48"
                class="author-avatar"
              />
            </a>
          )}
          
