---
// Props for customization
interface Props {
  href?: string;
  text?: string;
  className?: string;
}

const {
  href = "#main-content",
  text = "Skip to content",
  className = "",
} = Astro.props;
---

<a 
  href={href} 
  class:list={["skip-to-content", className]}
>
  {text}
</a>

<style>
  .skip-to-content {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--color-primary, #3b82f6);
    color: white;
    padding: 8px 16px;
    z-index: 100;
    transition: top 0.2s;
    text-decoration: none;
    font-weight: 500;
    border-radius: 0 0 4px 0;
    font-size: 0.875rem;
  }

  .skip-to-content:focus {
    top: 0;
    outline: 2px solid white;
    outline-offset: 2px;
  }
</style>