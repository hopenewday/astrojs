# Site Configuration
PUBLIC_SITE_URL=https://chakrirchain.com
PUBLIC_PUBLISHER_NAME=ChakrirChain
PUBLIC_PUBLISHER_LOGO_URL=https://chakrirchain.com/images/logo.svg
PUBLIC_LICENSE_URL=https://chakrirchain.com/license
PUBLIC_ENVIRONMENT=development

# Image Optimization
IMAGEKIT_URL=https://ik.imagekit.io/youraccount
IMAGEKIT_PUBLIC_KEY=your_public_key
IMAGEKIT_PRIVATE_KEY=your_private_key

# Storage Backup (Tebi S3-compatible storage)
TEBI_ENDPOINT=https://s3.tebi.io
TEBI_ACCESS_KEY=your_access_key
TEBI_SECRET_KEY=your_secret_key
TEBI_BUCKET=your-bucket-name

# Authentication
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.chakrirchain.com

# Comments System
CUSDIS_APP_ID=your_cusdis_app_id
CUSDIS_HOST=https://cusdis.com

# Analytics
UMAMI_WEBSITE_ID=your_umami_website_id
UMAMI_HOST=https://analytics.umami.is

# Security
CSP_REPORT_ENDPOINT=https://your-csp-reporting-endpoint.com
CSP_MONITORING_ENDPOINT=https://your-csp-monitoring-endpoint.com
CSP_MONITORING_TOKEN=your_monitoring_token
CSP_REPORT_URI=/api/csp-report

# CDN Monitoring
CDN_MONITOR_API_KEY=your_cdn_monitor_api_key